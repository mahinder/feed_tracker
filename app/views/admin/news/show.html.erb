<div id="container">
  <div id="content" class="clearfix">
    <div id="mainContent" class="clearfix">
      <%= render :partial => "/layouts/top_tabs_menu"%>
      <div id="RHS_col_admin_general" style="padding-left:10px">
        <h1>News</h1>
        <p>
          <b>Headline:</b>
          <%= render :partial=>'news_link', :locals=>{:news=>@news} %>
        </p>

        <p>
          <b>Url:</b>
          <%= @news.url %>
        </p>

        <p>
          <b>Published at:</b>
          <%= @news.published_at %>
        </p>

        <p>
          <b>Type:</b>
          <%type=@news.news_type%>
          <%= type.name unless type.nil? %>
        </p>

        <p>
          <b>Source:</b>
          <%= @news.news_source.name %>
        </p>

        <p>
          <b>Industries:</b>
          <%= @news.industries.collect{|l| l.name}.join ', ' %>
        </p>

        <p>
          <b>Locations:</b>
          <%= @news.locations.collect{|l| l.name}.join ', ' %>
        </p>

        <p>
          <b>Job Titles:</b>
          <%= @news.job_titles.collect{|l| l.name}.join ', ' %>
        </p>

        <p>
          <b>Job Functions:</b>
          <%= @news.job_functions.collect{|l| l.name}.join ', ' %>
        </p>


        <%= link_to 'Edit', edit_admin_news_path(@news) %> |
        <%= link_to 'Back', admin_news_index_path %>
        <%=render :partial=>"news_enrichment"%>
      </div>
    </div>
  </div>
</div>