    <%     if @news.ready
      @news.on_news_update %>
    <%        end
  else
    message = "\"#{@name}\" is already in news." %> 
    $("#<%=message_id%>").html("<%= escape_javascript(render(:partial => "/layouts/message_small_red",   :locals => {:message => '', :id => message_id})).html_safe %>");
  <%
  end
end%>

