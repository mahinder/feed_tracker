<div id='<%="edit-feed-#{feed.id}"%>' style='display:none;'>
  <hr />
  <% semantic_remote_form_for(feed, :url => update_feed_admin_news_source_path(feed),
                              :after => "afterUrlUpdate('#{feed.id}');", :method => :put) do |f| %>
      <div class="side-by-side clearfix" style="width:600px;z-index: 200;">
        <%= f.semantic_errors :state %>
        <% f.inputs do %>
            <%= f.input :url, :input_html => { :style => 'width: 72%;padding: 4px;', :id => "url-field-#{feed.id}" } -%>
            <%= f.input :news_type, :input_html => { :style => 'width: 74%;' }, :required => false -%>
            <%= f.input :industries, :required => false, :input_html => {:id => "inds-#{feed.id}", :class => "chzn-select", :style => "width:600px", :size => 8} %>
            <%= f.input :locations, :required => false, :input_html => {:id => "locs-#{feed.id}", :class => "chzn-select", :style => "width:600px", :size => 8} %>

            <%= f.commit_button :label => "Update News Feed" -%>
        <% end %>
      </div>
  <% end -%>
</div>

<li id="<%= "feed_#{feed.id}" -%>">
  <hr />
  <span id='<%="url-#{feed.id}"%>'><%= "#{feed.url}" %></span> |
  <%= link_to 'edit', "javascript:;", :onclick => "$('#edit-feed-#{feed.id}').show();$('#feed_#{feed.id}').hide();" %> |
  <%= link_to_remote 'remove', :url => destroy_feed_admin_news_sources_path(:id => feed.id), :method => :delete %>
</li>