<div id="interests_form" style="padding-bottom: 100px;">
  <% form_tag save_preferences_admin_users_path({:user_id=>params[:user_id],:filter=>@filter}) do %>
    <%if @filter == 'Industries'%>
      <div class="side-by-side clearfix">
        <%=collection_select "industry","industry_ids",@industries,
          :id,:name,
          { :selected=>lambda{|i| @interesting_industries.include? i.id} },
          {"data-placeholder"=>"Industries which interest you",:multiple => true, :size=>8,:class=>"chzn-select",:style=>"width:600px" }%>
      </div>
    <%elsif @filter == 'Locations'%>
      <div class="side-by-side clearfix">
        <%=collection_select "location","location_ids",@locations,
          :id,:name,
          { :selected=>lambda{|i| @interesting_locations.include? i.id} },
          {"data-placeholder"=>"Locations which interest you",:multiple => true, :size=>8,:class=>"chzn-select",:style=>"width:600px;" }%>
      </div>
    <%elsif @filter == 'Job Titles'%>
      <div class="side-by-side clearfix">
        <%=collection_select "title","title_ids",@titles,
          :id,:name,
          { :selected=>lambda{|i| @interesting_titles.include? i.id} },
          {"data-placeholder"=>"Job Titles which interest you",:multiple => true, :size=>8,:class=>"chzn-select",:style=>"width:600px;" }%>
      </div>
    <%elsif @filter == 'Functions'%>
      <div class="side-by-side clearfix">
        <%=collection_select "function","function_ids",@functions,
          :id,:name,
          { :selected=>lambda{|f| @interesting_functions.include? f.id} },
          {"data-placeholder"=>"Job Functions which interest you",:multiple => true, :size=>8,:class=>"chzn-select",:style=>"width:600px;" }%>
      </div>
    <%elsif @filter == 'Types of News'%>
      <div class="side-by-side clearfix">
        <%=collection_select "news_type","news_type_ids",@news_reasons,
          :id,:name,
          { :selected=>lambda{|f| @interesting_news_types.include? f.id} },
          {"data-placeholder"=>"News types which interest you",:multiple => true, :size=>8,:class=>"chzn-select",:style=>"width:600px;" }%>
      </div>
    <%end%>

    <%= submit_tag('Save and Next', :style=>"padding:5px;font-weight:bold")%>
  <%end%>
</div>
<%= render :partial=>'layouts/chosen_javascript' %>
