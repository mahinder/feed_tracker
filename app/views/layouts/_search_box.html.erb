<% placeholder ||= 'Search' %>
<div class="input-prepend">
  <% form_tag '', :method => :get do %>
      <button class="btn btn-append-prepend-with-icon button-with-input header_search_icon_ie" type="submit">
        <i class="icon-search search-news-alert-icon"></i>
      </button>
      <%= text_field_tag :search, params[:search], {:placeholder => placeholder, :size => nil} %>
  <% end %>
</div>